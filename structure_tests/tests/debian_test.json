{
	"schemaVersion": "1.0.0",
	"commandTests": [
		{
			"name": "apt-get",
			"command": ["apt-get", "help"],
			"expectedOutput": [".*Usage.*"],
			"excludedError": [".*FAIL.*"]
		},
		{
			"name": "apt-config",
			"command": ["apt-config","dump"],
			"expectedOutput": ["Acquire::Retries \"3\""]
		}
	],
	"fileExistenceTests": [
		{
			"name": "Root",
			"path": "/",
			"isDirectory": true,
			"shouldExist": true
		}
	],
	"fileContentTests": [
		{
			"name": "Debian Sources",
			"path": "/etc/apt/sources.list",
			"expectedContents": [
				".*httpredir\\.debian\\.org.*"
			],
			"excludedContents": [
				".*gce_debian_mirror.*"
			]
		},
		{
			"name": "Retry Policy",
			"path": "/etc/apt/apt.conf.d/apt-retry",
			"expectedContents": [
				"Acquire::Retries 3;"
			]
		}
	]
}
